package net.myphenotype.jeeves.drools.section03.step1
 
import net.myphenotype.jeeves.drools.domain.Passport;
import java.time.LocalDate;

rule "Valid passport"
  dialect "java"
  when
	Passport( !isExpired(), unusedVisaPages > 0 )
  then
	System.out.println("This invoice is READY FOR matching");
end

rule "Expired or full passport"
  dialect "java"
  when
	Passport( isExpired() || unusedVisaPages == 0 )
  then
	System.out.println( "This invoice is NOT READY FOR MATCHING because it is expired or the invoice amount is zero" );
end
